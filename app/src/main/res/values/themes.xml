<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemoteConfigAppExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/screen_bg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/screen_bg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RemoteConfigAppExample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RemoteConfigAppExample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RemoteConfigAppExample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoadingDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog" />

    <style name="AppTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>